<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Ajouter un produitt"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@id/slogan_category"
        >

        <ImageView
            android:id="@+id/t_shirt"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_alignTop="@+id/linear_category_layout"
            android:src="@drawable/t_shirt" />

        <ImageView
            android:id="@+id/sport"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sport3" />
        <ImageView
            android:id="@+id/femelle_dress"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/dress" />

        <ImageView
            android:id="@+id/sweather"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/swea" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@id/linear_category_layout"
        >

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_alignTop="@+id/linear_category_layout"
            android:src="@drawable/glass" />

        <ImageView
            android:id="@+id/purse_bag"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/pursbag" />
        <ImageView
            android:id="@+id/hats"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/hat" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/shoes" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@id/linear2_category_layout"
        >

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_alignTop="@+id/linear_category_layout"
            android:src="@drawable/headphones" />

        <ImageView
            android:id="@+id/loptops"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/lopt" />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/watch" />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/iphone" />



    </LinearLayout>

</RelativeLayout>